<% layout('layouts/boilerplate') %> 
<header>      
</header>
<div class="row">
    <div class="col-7 offset-2 mt-4">
        <h1>All Setups</h1>
            <% for(let setup of setups) { %> 
                <div class="card mb-3">
                    <img src="<%= setup.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title"><%= setup.title %></h5>
                    <p class="card-text"><%= setup.description %></p>
                    <h6 class="card-subtitle mb-2 text-muted tags"><%= setup.category %> </h6>
                    <a href="/setups/<%= setup._id %> " class="btn btn-primary">show</a>
                    </div>
                </div>
            <% } %> 
    </div>
    <div class="col-3 mt-4">
        <div class="card">
            <div class="card-body">
            <h5 class="card-title">Welcome</h5>
            <p class="card-text">Sign up and post your gaming setups, office spaces and anything in between.</p>
            <a href="/setups/new" class="btn btn-primary ">Post your setup!</a>
            </div>
        </div>
    </div>
</div>