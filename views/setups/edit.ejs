<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="mt-4">Edit your Setup</h1>
        <form action="/setups/<%= setup._id %>?_method=PUT" method="POST" class="mb-4 validated-form" novalidate >
            <div class="form-input mb-2">
                <label for="setup-title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="setup-title" value="<%= setup.title %>" name="setup[title]" placeholder="Title name..." required>
            </div>
            <div class="form-input mb-2">
                <label for="setup-description" class="form-label">Description:</label>
                <input type="text" class="form-control" id="setup-description" value="<%= setup.description %>" name="setup[description]" placeholder="Tell us more about your setup..." required>
            </div>
            <div class="form-input mb-2">
                <label for="setup-tags" class="form-label">Tags:</label>
                <input type="text" class="form-control" id="setup-tags" value="<%= setup.category %>" name="setup[category]" placeholder="'work', 'apple', 'gaming', 'leisure'">
            </div>
            <div class="form-input mb-2">
                <label for="setup-image" class="form-label">Tags:</label>
                <input type="text" class="form-control" id="setup-image" name="setup[image]" value="<%= setup.image %>" required>
            </div>
            <button class="btn btn-primary">Update Setup!</button>
            <a href="/setups" class="btn btn-primary">Back</a>
        </form>
    </div>
</div>


